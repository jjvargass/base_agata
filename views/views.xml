<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="base_agata.list">
      <field name="name">base_agata list</field>
      <field name="model">base_agata.base_agata</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="base_agata.action_window">
      <field name="name">base_agata window</field>
      <field name="res_model">base_agata.base_agata</field>
      <field name="view_mode">tree,form</field>
    </record>


