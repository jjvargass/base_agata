<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="base_agata.list">
      <field name="name">base_agata list</field>
      <field name="model">base_agata.base_agata</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="base_agata.action_window">
      <field name="name">base_agata window</field>
      <field name="res_model">base_agata.base_agata</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="base_agata.action_window_02">
      <field name="name">base_agata window</field>
      <field name="res_model">base_agata.base_agata</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Base Agata" id="base_agata.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="base_agata.menu_1" parent="base_agata.menu_root"/>
    <menuitem name="Menu 2" id="base_agata.menu_2" parent="base_agata.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="base_agata.menu_1_list" parent="base_agata.menu_1"
              action="base_agata.action_window"/>

  </data>
</odoo>